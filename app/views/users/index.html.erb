<!-- app/views/users/index.html.erb -->
<h1>Users</h1>

<% @users.each do |user| %>
  <p><%= user.email %></p>
  <% if current_user != user %>
    <% if current_user.followed_by?(user) %>
      <%= link_to "Unfollow", unfollow_user_path(user), method: :delete, class: "btn btn-danger mb-3" %>
    <% else %>
      <%= link_to "Follow", follow_user_path(user), method: :post, class: "btn btn-primary mb-3" %>
    <% end %>
  <% end %>
<% end %>
