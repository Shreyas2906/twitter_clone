<!-- app/views/users/index.html.erb -->
<h1>Users</h1>

<%= form_tag users_search_path, method: :get do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search users..." %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li><%= user.email %></li>
  <% end %>
</ul>
